<center>
  <body>
  <div>
  <h2> Sign in! </h2>
  <%= form_for :user, url: session_path do |form| %>
  <p class='tags'>Username:</p> <%= form.text_field :username, placeholder: 'Username', required:true %><br><br>
  <p class='tags'>Password:</p> <%= form.password_field :password, placeholder: 'password', required: true %><br><br>
  <%= submit_tag 'Sign in!' %>
  <% end %>

  <br>
  New user? <%= link_to 'Create an account', new_user_path %>
</div>
</body>
</center>