<center>
  <div>
    <%= form_for @event do |form| %>
    <p class='tags'>Name of Event:</p> <%= form.text_field :name, placeholder: 'Name of Event',size:'40x1', :class => 'input' %>
    <p class='tags'>Where was I:</p> <%= form.text_field :venue, placeholder: 'Venue',  size:'40x1',:class => 'input' %>
    <p class='tags'>When was it:</p> <%= form.text_field :date, placeholder: 'Date', size:'40x1',:class => 'input' %>
    <p class='tags'>My Memory:</p> <%= form.text_area :description, size: "80x12",:class => 'input' %><br>
    <%= form.submit :class => 'buttonTo'%>
    <% end %>
  </div>
</center>